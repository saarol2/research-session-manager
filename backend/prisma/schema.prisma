// prisma/schema.prisma
datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("researcher") // "researcher" | "admin"
  createdAt DateTime @default(now())
  studies   Study[]  // Researcher owns studies
}

model Study {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  owner       User      @relation(fields: [ownerId], references: [id])
  ownerId     Int
  createdAt   DateTime  @default(now())
  sessions    Session[]
}

model Session {
  id        Int       @id @default(autoincrement())
  study     Study     @relation(fields: [studyId], references: [id])
  studyId   Int
  location  String
  date      DateTime
  slots     TimeSlot[]
}

model TimeSlot {
  id        Int      @id @default(autoincrement())
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId Int
  startTime DateTime
  endTime   DateTime
  capacity  Int
  bookings  Booking[]
}

model Booking {
  id         Int      @id @default(autoincrement())
  slot       TimeSlot @relation(fields: [slotId], references: [id])
  slotId     Int
  name       String
  email      String?
  consentAt  DateTime
}
